<section>
        <div class="container">
            <div class="row">
                {{#each products}}
                <div class="col-md-3 mt-5 p-3">
                    <div class="card" style="width: 16rem; height: 28rem; ">
                        <img class="card-img-top" src="/product-images/{{this._id}}.jpg" alt="Card image cap" style="height: 14rem;">
                        <div class="card-body">
                            <h5 class="card-title">{{this.Name}}</h5>
                            <p class="card-text">{{this.Category}}</p>
                            <p class="card-text">{{this.Description}}</p>
                            <p class="card-text">Rs.{{this.Price}}</p>
                           
                            <button onclick="addToCart('{{this._id}}')" class="btn btn-primary" >Add to Cart</button>
                            <a href="/place-order" class="btn btn-success" style="width: 100px;">Buy</a>
                        </div>
                    </div>
                </div>
              {{/each}}
               
            </div>
        </div>

    </section>

